<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>ALl Posts</h1>
    <div class="allPosts">
        <% posts.forEach(post => { %>
            <div class="postCard">
                <h2>Title: <%= post.title %></h2>
                <p>Content: <%= post.content %></p>
                <img src="/uploads/<%= post.imageUrl %>" alt="Image" />
                <p>Published At: <%= post.publishedAt %></p>
                <a href="/api/posts/<%= post.id %>/addCategory">Add Category</a>
                <a href="/api/posts/<%= post.id %>/categories">See Category</a>
                <a href="/api/posts/<%= post.id %>/edit">Edit</a> 
            <form action="/api/posts/<%= post.id %>" method="post"> 
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Trash</button>
            </form>
            <% }); %>
        </div>
    </div>
</body>
</html>
